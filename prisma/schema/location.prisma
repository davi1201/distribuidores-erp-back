model State {
  id   Int    @id @default(autoincrement())
  name String
  uf   String @unique

  cities          City[]
  billingProfiles BillingProfile[]
  Address         Address[]

  @@map("states")
}

model City {
  id       Int    @id @default(autoincrement())
  name     String
  stateId  Int
  state    State  @relation(fields: [stateId], references: [id])
  ibgeCode String @unique

  billingProfiles BillingProfile[]
  Address         Address[]

  @@map("cities")
}
