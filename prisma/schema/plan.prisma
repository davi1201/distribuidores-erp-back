model Plan {
  id              String  @id @default(uuid())
  stripeProductId String? @unique
  name            String
  slug            String  @unique

  // Preços Visuais (Para exibir no frontend)
  price       Decimal  @db.Decimal(10, 2) // Mensal
  yearlyPrice Decimal? @db.Decimal(10, 2) // Anual

  // IDs da Stripe (Para processar o pagamento)
  stripeMonthlyPriceId String?
  stripeYearlyPriceId  String?

  isActive Boolean @default(true)
  features Json? // Outras features (ex: "tem_api": true)

  // Limite de usuários explícito (1 = Só o dono)
  maxUsers Int @default(1)

  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenants       Tenant[]
  subscriptions Subscription[]

  @@map("plans")
}
