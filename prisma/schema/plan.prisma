model Plan {
  id   String @id @default(uuid())
  name String
  slug String @unique

  // Preços
  price       Decimal  @db.Decimal(10, 2) // Preço Mensal (Padrão)
  yearlyPrice Decimal? @db.Decimal(10, 2) // Preço Anual (Opcional)

  isActive      Boolean        @default(true)
  features      Json?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  tenants       Tenant[]
  subscriptions Subscription[]

  maxUsers Int @default(1) // Limite de usuários (1 = Só o dono)

  @@map("plans")
}
