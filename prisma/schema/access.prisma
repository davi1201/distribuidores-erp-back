model Invite {
  id    String @id @default(uuid())
  token String @unique
  email String

  // NOVO CAMPO: O admin define o nome no convite
  name String

  role     Role
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  // Guarda as configs do Seller (comiss√£o, whatsapp, etc)
  metadata Json?

  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("invites")
}
